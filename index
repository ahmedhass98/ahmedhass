    <!-- JavaScript Charts Logic -->
    <script>
        // Register DataLabels plugin
        Chart.register(ChartDataLabels);

        // Utility: Label Wrapping Logic
        function wrapLabel(label, maxLen = 16) {
            if (label.length <= maxLen) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];
            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxLen) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // Shared Tooltip Config
        const sharedTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    return Array.isArray(label) ? label.join(' ') : label;
                }
            },
            titleFont: { family: 'Cairo', size: 14 },
            bodyFont: { family: 'Cairo', size: 13 },
            rtl: true
        };

        // Data Variables
        const labels = ["ุตุงูุชู ูู ูุงุญุฏุฉ ูุฑูู", "ูุตุงุฆุญ ุณุฑูุนุฉ ู ูููุฉ", "ุฃูุซุฑ ุดูุฆ ุฃุฎุงู ููู", "ุชุฃูุฏ ุฏุงุฆูุงู ูู ุงูุฌูุฏุฉ", "ูู ุชุชููุนูู ุณุนุฑู"];
        const wrappedLabels = labels.map(l => wrapLabel(l, 18));
        const costData = [6.64, 9.60, 11.07, 14.40, 27.97];
        const clicks = [57, 68, 32, 80, 158];
        const messages = [18, 24, 16, 12, 6];

        // 1. Efficiency Chart
        new Chart(document.getElementById('costRankingChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: wrappedLabels,
                datasets: [{
                    label: 'ุชูููุฉ ุงูุฑุณุงูุฉ (ุฑูุงู)',
